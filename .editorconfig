# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 2

[*.java]
indent_size = 4
ij_visual_guides = 120,160

[*.html]
ij_visual_guides = 120,160

[*.css]
ij_visual_guides = 80,120

[*.js]
ij_visual_guides = 80,120

[*.md]
indent_style = space
trim_trailing_whitespace = false
